{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@cloudops-commander/*": ["packages/*/src"],
      "@cloudops-commander/logger": ["packages/logger/src"],
      "@cloudops-commander/types": ["packages/types/src"],
      "@cloudops-commander/database": ["packages/database/src"],
      "@cloudops-commander/cline-automation": ["packages/cline-automation/src"],
      "@cloudops-commander/kestra-workflows": ["packages/kestra-workflows/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
